{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-pond": {
      "projectType": "library",
      "root": "projects/ng-pond",
      "sourceRoot": "projects/ng-pond/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/ng-pond/tsconfig.lib.json",
            "project": "projects/ng-pond/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ng-pond/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-pond/src/test.ts",
            "tsConfig": "projects/ng-pond/tsconfig.spec.json",
            "karmaConfig": "projects/ng-pond/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-pond/tsconfig.lib.json",
              "projects/ng-pond/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    },
    "test": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/test",
      "sourceRoot": "projects/test/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/test",
            "index": "projects/test/src/index.html",
            "main": "projects/test/src/main.ts",
            "polyfills": "projects/test/src/polyfills.ts",
            "tsConfig": "projects/test/tsconfig.app.json",
            "aot": true,
            "assets": [
              "projects/test/src/favicon.ico",
              "projects/test/src/assets"
            ],
            "styles": ["projects/test/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/test/src/environments/environment.ts",
                  "with": "projects/test/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "test:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "test:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "test:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/test/src/test.ts",
            "polyfills": "projects/test/src/polyfills.ts",
            "tsConfig": "projects/test/tsconfig.spec.json",
            "karmaConfig": "projects/test/karma.conf.js",
            "assets": [
              "projects/test/src/favicon.ico",
              "projects/test/src/assets"
            ],
            "styles": ["projects/test/src/styles.scss"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/test/tsconfig.app.json",
              "projects/test/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "test"
}
